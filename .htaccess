# Redireciona automaticamente para URL limpa (sem .html)
RewriteEngine On
RewriteBase /

# Remove index.html da URL
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Permite que URLs sem .html funcionem
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]